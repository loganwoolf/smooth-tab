{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "order/properties-alphabetical-order": true,
        "order/order": [
            "custom-properties",
            "declarations",
            "rules"
        ]
    },
    "fix": true
}
